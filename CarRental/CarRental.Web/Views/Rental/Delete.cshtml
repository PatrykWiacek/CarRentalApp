@model CarRental.Logic.Models.RentalViewModel;

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Delete Rental</h2>
        </div>
    </div>
    <hr />

    <h3 class="text-warning">Are you sure you want to delete this?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Customer
            </dt>
            <dd class="col-sm-10">
                @ViewData["Customer"]
            </dd>
            <dt class="col-sm-2">
                Car
            </dt>
            <dd class="col-sm-10">
                @ViewData["Car"]
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BeginDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BeginDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EndDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TotalCost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TotalCost)
            </dd>
        </dl>

        <form asp-action="Delete">
            @*<input type="submit" value="Delete" class="btn btn-danger" /> |*@

            <button type="submit" class="btn btn-secondary app-button" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete element">
                <a asp-action="Delete" class="none-underline">
                    <i class="bi bi-trash"> Delete</i>
                </a>
            </button>

            <partial name="Buttons/_ButtonBackToList" />
        </form>
    </div>
</div>
